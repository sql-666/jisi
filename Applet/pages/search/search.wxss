/* pages/search/search.wxss */
.warpSearch{
  display: flex;
  justify-content: center;
  /* background-color: rgb(245, 246, 247); */
  height: 80rpx;
  width: 100%;
  padding: 20rpx 0;
  background-color: white;
  box-shadow: 6px 6px 3px #E0E0E0;
}
.bt{
  margin-bottom: 10rpx;
}
.toSearch{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  width: 85%;
  height: 60rpx;
  padding: 5rpx 0rpx;
  background-color: white;
  border: 0.01rpx solid #ccc;
}



.placeholder{
  font-size: 25rpx;
  letter-spacing: 0.1rem;
}
input{
  background-color: white;
  width: 95%;
}
#ser{
  font-size: 28rpx;
  color: black;
  line-height: 70rpx;
  margin-left: 10rpx;
}

.respect_img{

width: 250rpx;
height: 200rpx;
margin-left: 40rpx;
margin-right: 20rpx;

}

.suo image{
  width: 50rpx;
  height: 50rpx;
  
}

.suo{
  position: relative;
  top:-150rpx;
  right:20rpx;
}

.modal{
  background-color: white;
  position: fixed;
  bottom: 500rpx;
  width: 80%;
  left: 10%;
  height: 210rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  z-index: 101;
}

input{
  padding: 0 10rpx;
  margin: 20rpx 0;
}

.drawer_screen {
height: 100%;
position: fixed;
top: 0;
left: 0;
z-index: 100;
background-color: #000;
opacity: 0.3;
overflow: hidden;
width: 100%;
}


.modal-btn{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;

}
.modal-b{
  flex: 1;
  text-align: center;
  border: 0.01rpx solid #ccc;
  /* border-radius: 20rpx; */
  
}


.right image{
  width: 35rpx;
  height: 35rpx;
  margin: 0 10rpx;
}

page{
  background-color: whitesmoke;
}

.wrap-item{
  display: flex;
  width: 95%;
  height: 400rpx;
  margin-left: 2%;
  background-color: white;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;

}

.right{
  width:60%;
}

.icon-text{
  display: flex;
  color: #9E9E9E;
  margin: 10rpx 0;
  
}
.icon-text text{
  font-size: 25rpx;
  width: 120rpx;
}

.info-item{
  display: flex;
  align-items: center;
}

.list{
  position: relative;
  margin-top: 30rpx;
}